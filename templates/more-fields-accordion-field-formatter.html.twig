<div class="field-box mb-3">
  <div class="field-meta btn btn-block p-0 border-0" data-toggle="collapse" data-target="#{{ element.description }}" aria-expanded="true" aria-controls="{{ element.description }}">
    {% if element.icon %}
      <div class="field-icon text-light">
        {{ element.icon }}
      </div>
    {% endif %}
    {% if element.title %}
      <div class="field-title font-weight-bold">
        {{ element.title }}
      </div>
    {% endif %}
  </div>
  ddd
      
    
  {% if element.description %}
    <div id="{{ element.id }}" class="collapse" data-parent="#accordion-parent-element">
      <div class="field-description h6 text-black-50">
        {{ element.description }}
      </div>
    {% endif %}
  </div>
</div>
